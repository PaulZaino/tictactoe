<% javascript 'game' %>

  <div class="page-header">
    <h1>Game <small><%= @game.experimental_condition_name %> </small></h1>
  </div>



  <div class="row">
    <script type="text/x-handlebars">
      {{#view TTT.BoardView}}
        <div class="span10">
          <h2>{{content}}</h2>
        </div>
      {{/view}}
    </script>

    <script type="text/x-handlebars">
      <div class="span4">
        <table>
        <thead>
          <th>Player</th>
          <th>Position</th>
          <th></th>
        </thead>
        {{collection contentBinding="TTT.MovesController" itemViewClass="TTT.MoveListItem" tagName="tbody" class="move_history" }}
      </table>
      {{view SC.TextField }}
    </div>

    </script>
  </div>


<script type="text/x-handlebars" data-template-name="TTT.move_list_item">
  <td>{{content.player}}</td> 
  <td>{{content.position}}</td>
  <td><a class="btn danger" data-method="delete" rel="nofollow">X</a></td>
</script>
